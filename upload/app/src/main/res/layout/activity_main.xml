<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.upload.MainActivity">

    <TextView
        android:id="@+id/tv_path"
        android:textSize="18dp"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择文件"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/bt_select"
        android:layout_marginTop="150dp"

        />
    <Button
        android:id="@+id/tv_token"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="开始上传" />


    <com.beiing.flikerprogressbar.FlikerProgressBar
        android:id="@+id/round_flikerbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:textSize="14sp"
        app:loadingColor="#40c4ff"
        app:stopColor="#ff9800"
        app:radius="20dp"
        android:layout_below="@+id/tv_token"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />
</RelativeLayout>
